<div class="container text-center">
    <h1>
        {{title}}
    </h1>
    <div>
        <a class="btn btn-warning" href="/decks/add">Create new deck</a>
    </div>
    {{#if decks}}
        <div>
            <p>Your decks:</p>
            {{# each decks as |val key|}}
                {{!-- {{ this }} --}}
                {{key}} : {{val}}
            {{/each}}
        </div>
    {{/if}}
</div>
